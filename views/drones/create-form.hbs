<h2>Create a new drone</h2>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Crear nuevo Dron</h1>
            <hr>

            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input required="required" type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label for="descpropellersription" class="form-label">Propellers</label>
                    <input required="required" type="number" class="form-control" id="propellers" name="propellers">
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">MaxSpeed</label>
                    <input required="required" type="number" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Crear Dron</button>
                </div>

            </form>

        </div>
    </div>

    <hr>

    <a href="/" class="btn btn-dark">Volver a inicio</a>
</div>